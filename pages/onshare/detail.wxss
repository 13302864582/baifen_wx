  min-width: 8px;
  border-radius: 50%;
  background-color: #F43530;
  color: #FFFFFF;
  line-height: 1.2;
  text-align: center;
  font-size: 11px;
  vertical-align: middle;
}
.bc_yellow {
    background-color:#FFBE00;
}


.appeal-ans {
  position: absolute;
  z-index:600;
  width: 30px;
  height: 24px;
  background-color: transparent;
}
.weui-btn{
  float: left;
  margin-top:0px;
  width: 100%;
}
button[plain] {
color:#353535;
border:none;
