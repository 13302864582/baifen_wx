}

.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  bottom: 0;
  width: 100%;
  height: 8%;
}
.weui-navbar__item:hover{
  background: #eee;
}
.sound{
    width: 24px;
    height: 24px;
    background: transparent
}
.ans-badge {
  display: inline-block;
  padding: 2px;
  min-width: 8px;
  border-radius: 10px;
  background-color: #4dc95b;
  color: #FFFFFF;
  text-align: center;
  font-size: 11px;
  vertical-align: middle;
}
.weui-badge {
  display: inline-block;
  padding: 1px;
