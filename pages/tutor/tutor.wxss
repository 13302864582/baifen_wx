/* pages/tutor/tutor.wxss */
page{
    background: #f9f9f9
}
.coupon-phone {
    margin-top: 10px;
    background: #fff;
    padding: 20px
}

.weui-cells__title {
    background: #fff;
    margin-bottom:0px;
    padding: 10px 15px;
    font-size: 12px
}

.weui-panel::before {
    border-top: 1px solid #f3f3f3
}
.weui-panel::after {
    border-bottom: none;
}
.campus::before {
    border-top: 1px solid #f3f3f3
}
.campus::after {
    border-bottom: none
}
.page__hd {
    padding: 0px;
    background: #fff
}
.weui-media-box_appmsg {
    align-items: inherit;
}

.weui-media-box__hd_in-appmsg {
    margin-right:.8em;
    width:70px;
    height:70px;
    line-height:60px;
    text-align:center;
}
.weui-media-box__title {
    font-weight: bold;
    text-align: left;
    padding-top: 0px
}
.weui-media-box__desc {
    color: #929292;
    text-align: left;
    font-size:14px;
    line-height:1.4;
    -webkit-line-clamp:4;
}

.contact {
    background: #eee
}

.phone {
    padding: 0 0;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin: 5px auto;
}
.phone image {
    width: 100%;
    height: 100%;
}

.border-r {
    border-right: 1px solid #E5E5E5
}
.weui-badge {
    background-color:#f68484;
    margin:0px 10px;
    line-height:0;
    text-align:center;
    font-size:5px;
}
.weui-media-box {
    color: #929292;
}

.weui-media-box_text image{
  margin-right: 5px;
  width: 2px;
  height: 8px;
}