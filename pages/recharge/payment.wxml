<!--pages/recharge/payment.wxml-->

    
    <view class="page__bd">
        <form bindsubmit="paymentinfo">
        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">订单支付</view>
                </view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">订单号</view>
                    <input class="weui-form-preview__value" name="out_trade_no" disabled="true" value="{{orderid}}"></input>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">套餐</view>
                    <input class="weui-form-preview__value" name="body" disabled="true" value="{{title}}"></input>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">付款金额</view>
                    <input class="weui-form-preview__value_in-hd pink" name="total_fee" disabled="true" value="{{payprice}}"></input>
                </view>
                <view class="weui-form-preview__item">
                    <input class="weui-form-preview__value" name="currenttime" disabled="true" value="{{currenttime}}"></input>
                </view>
                
                <view class="btn-area">
                    <button type="default" formType="submit" size="mini" >立即支付</button>
                </view>
            </view>
            
        </view>
        </form>
    </view>

