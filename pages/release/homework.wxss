/* pages/index/homework.wxss */
.images-wrapper {
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.images-wrapper-text {
  font-size: 28rpx;
}
.images-list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.images-image {
  background-color: #F5F5F5;
  width: 270rpx;
  height: 210rpx;
  margin: 10rpx;
}
.images-text {
    font-weight: bold;
}
.images-subtitle {
    font-size: 14px;
    color: #FB9F44;
}
.image-plus {
  position: relative;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 35rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 35rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

.subject {
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.message {
    padding: 20rpx;
    background-color: #fff;
    margin-top: 20rpx;
}
.message-word {
    margin-top: 10px;
    background: #eee;
    height: 50px;
    border-radius: 4px;
    padding: 10px;
}

.warning {
    padding: 20rpx;
    margin-top: 20rpx;
    font-size: 12px;
    text-align: center;
}

.weui-cell {
  padding: 2px 4px;
  border: 1rpx solid #D9D9D9;
  border-radius: 4px;
  margin:0px 5px 10px 0px; 
}
.weui-cell:before {
  border-top: none;
}
.weui-check__label {
  border-radius: 30px;
  width: 28%;
  float: left;
}
.weui-check__label_hover {
  border-color: #3CDB9E;
  background-color: #3CDB9E;
  color: #fff
}
.weui-cell__bd {
  text-align: center;
}

.img-upload {
    position: relative;
    margin-right: 1px;
}
.img-del {
  display: inline-block;
  padding: .15em .4em;
  min-width: 8px;
  border-radius: 50%;
  background-color: #F43530;
  color: #FFFFFF;
  line-height: 1.2;
  text-align: center;
  font-size: 12px;
  vertical-align: middle;
  position: absolute;
  top: -.4em;
  right: -.4em;
}
.leaf {
  position: absolute;
  bottom:0px;
  left: 31%
}

.btn-area{
   padding: 0 20px;
}

.btn-area button{
 background-color:#3CDB9E ;
} 