.weui-btn{
  float: left;
  margin-top:0px;
  width: 100%;
}
button[type="warn"][plain] {
  color:#e64340;
  border:none;
  border-radius: 0px;
  
  background-color:transparent;
}
button[type="primary"][plain] {
  color:#1aad19;
  border:none;
  background-color:transparent;
}
button {
  font-size:14px;
  line-height:3.6;
}
