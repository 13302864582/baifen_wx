.img-box {
  height: 100%;
  width: 100%;
   position: relative;
}
image {
width:100%;
height:100%;
background: #eee;
display:inline-block;
overflow:hidden;
}

.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  bottom: 0;
  width: 100%;
  height: 8%;
}
.weui-navbar__item:hover{
  background: #eee;
}
/*正确*/
.right-ans {
  position: absolute;
  z-index:600;
  width: 30px;
  height: 24px;
  background-color: transparent;
}
/*错误*/
